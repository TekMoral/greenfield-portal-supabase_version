# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_anon_key
# Optional: Override functions base URL (defaults inferred from VITE_SUPABASE_URL)
VITE_SUPABASE_FUNCTIONS_URL=

# Edge Functions Feature Flags
VITE_USE_EDGE_FUNCTIONS_FOR_TEACHERS=true
VITE_USE_EDGE_FUNCTIONS_FOR_STUDENTS=true
VITE_USE_EDGE_FUNCTIONS_FOR_ADMINS=true
VITE_USE_EDGE_FUNCTIONS_FOR_REPORTS=false
VITE_USE_EDGE_FUNCTIONS_FOR_BULK_OPS=false


# Web Vitals Ingest (optional)
# In development, leave empty to log to console only.
# In production, set to your Supabase Edge Function URL for ingest-web-vitals, e.g.:
# https://<project-ref>.functions.supabase.co/ingest-web-vitals
VITE_VITALS_ENDPOINT=

# Edge Function rate limit tuning (optional)
# Defaults: 60 events per minute per IP|path identity
# WEB_VITALS_RL_MAX=60
# WEB_VITALS_RL_WINDOW_MS=60000

# Other Configuration